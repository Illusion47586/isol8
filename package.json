{
  "name": "isol8",
  "version": "0.1.0",
  "description": "Secure code execution engine for AI agents",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./schema/isol8.config.schema.json"
  },
  "bin": {
    "isol8": "./dist/cli.js"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun run scripts/build.ts",
    "test": "bun test",
    "lint:check": "ultracite check",
    "lint:fix": "ultracite fix",
    "schema": "ts-json-schema-generator --path src/types.ts --type Isol8UserConfig --tsconfig tsconfig.json -o schema/isol8.config.schema.json",
    "release": "release-it",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "dockerode": "^4.0.9",
    "hono": "^4.11.9",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@release-it/conventional-changelog": "^10.0.5",
    "@types/bun": "latest",
    "@types/dockerode": "^4.0.1",
    "@types/node": "^25.2.3",
    "lint-staged": "^16.2.7",
    "release-it": "^19.2.4",
    "simple-git-hooks": "^2.13.1",
    "ts-json-schema-generator": "^2.5.0",
    "typescript": "^5.9.3",
    "ultracite": "^7.2.0"
  },
  "files": [
    "dist",
    "schema",
    "docker",
    "src",
    "README.md"
  ],
  "jsonValidation": [
    {
      "fileMatch": "isol8.config.json",
      "url": "./schema/isol8.config.schema.json"
    }
  ],
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "ultracite fix",
      "bash -c 'bunx tsc --noEmit -p tsconfig.json'"
    ]
  }
}
