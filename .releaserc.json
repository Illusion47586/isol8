{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "bun run scripts/sync-versions.ts ${nextRelease.version} && bun run build && cd apps/server && bun run build:all",
        "publishCmd": "(cd packages/core && npm publish --provenance --access public) && (cd apps/cli && npm publish --provenance --access public)"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "bun.lock",
          "CHANGELOG.md",
          "packages/core/package.json",
          "apps/cli/package.json",
          "apps/server/package.json",
          "apps/docs/package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "apps/server/dist/isol8-server-linux-x64",
            "label": "isol8-server-linux-x64"
          },
          {
            "path": "apps/server/dist/isol8-server-linux-arm64",
            "label": "isol8-server-linux-arm64"
          },
          {
            "path": "apps/server/dist/isol8-server-darwin-x64",
            "label": "isol8-server-darwin-x64"
          },
          {
            "path": "apps/server/dist/isol8-server-darwin-arm64",
            "label": "isol8-server-darwin-arm64"
          }
        ]
      }
    ]
  ]
}
