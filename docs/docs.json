{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "isol8",
  "description": "Secure code execution engine for AI agents. Run untrusted code in Docker containers with strict resource limits, network controls, and output sanitization.",
  "colors": {
    "primary": "#0E7C6B",
    "light": "#55D3B9",
    "dark": "#0A5C50"
  },
  "favicon": "/favicon.png",
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/Illusion47586/isol8"
      }
    ]
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude"]
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart"]
          },
          {
            "group": "CLI",
            "pages": [
              "cli/run",
              "cli/setup",
              "cli/serve",
              "cli/config",
              "cli/cleanup"
            ]
          },
          {
            "group": "TypeScript Library",
            "pages": [
              "library/overview",
              "library/execution",
              "library/streaming",
              "library/file-io"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "configuration",
              "runtimes",
              "benchmarks",
              "architecture",
              "security"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "HTTP Server",
            "pages": ["server/overview", "server/endpoints"]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/Illusion47586/isol8"
    }
  }
}
